<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="ИТиП"
        android:id="@+id/textViewFaculty"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textViewPosition"
        android:layout_alignEnd="@+id/textViewPosition"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:layout_toRightOf="@+id/tv_schedule_day"
        android:gravity="right"
        android:textStyle="bold"
        android:focusable="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="1 курс"
        android:id="@+id/textViewCourse"
        android:layout_below="@+id/textViewFaculty"
        android:layout_alignRight="@+id/textViewPosition"
        android:layout_alignEnd="@+id/textViewPosition"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:layout_toRightOf="@+id/tv_schedule_day"
        android:gravity="right"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="123 из 1189"
        android:id="@+id/textViewPosition"
        android:gravity="right"
        android:layout_below="@+id/textViewCourse"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_toRightOf="@+id/tv_schedule_time"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Факультет:"
        android:id="@+id/tv_schedule_day"
        android:layout_above="@+id/textViewCourse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:textColor="#444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Курс:"
        android:id="@+id/tv_schedule_time"
        android:layout_below="@+id/tv_schedule_day"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:layout_alignRight="@+id/tv_schedule_day"
        android:layout_alignEnd="@+id/tv_schedule_day"
        android:textColor="#444" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Позиция:"
        android:id="@+id/textView3"
        android:layout_below="@+id/tv_schedule_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_alignRight="@+id/tv_schedule_time"
        android:layout_alignEnd="@+id/tv_schedule_time"
        android:textColor="#444" />
</RelativeLayout>