<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dialog_choose_year_item_linLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/dialog_choose_year_item_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014/2015"
            android:textSize="15dp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/dialog_choose_year_item_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:button="@drawable/selector_radiobutton"/>

    </LinearLayout>
</LinearLayout>